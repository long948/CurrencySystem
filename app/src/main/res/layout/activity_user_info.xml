<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/activity_bg"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".module.mine.UserInfoActivity">
    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/user_info_topBar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:qmui_topbar_left_back_drawable_id="@drawable/ic_check_white_24dp"
        app:qmui_topbar_text_btn_color_state_list="@color/white"
        app:qmui_topbar_title_color="@color/white"

        />
    <LinearLayout
        android:id="@+id/llyt_member_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="60dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="头像"
            android:textColor="#ffd2d9f1"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@mipmap/my_avatar" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/arrow" />


        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line_member_icon"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#8390C3" />
    <LinearLayout
        android:id="@+id/llyt_member_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="姓名"
            android:textColor="#ffd2d9f1"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:drawableRight="@mipmap/arrow"
            android:drawablePadding="16dp"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text=""
            android:textColor="#ffd2d9f1"
            android:textSize="14dp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#8390C3" />
</LinearLayout>