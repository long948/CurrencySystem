<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".module.mine.DownLoadActivity">
    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/user_info_topBar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:qmui_topbar_left_back_drawable_id="@drawable/ic_check_block_24dp"
        app:qmui_topbar_text_btn_color_state_list="@android:color/black"
        app:qmui_topbar_title_color="@android:color/black"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="373dp"
        android:layout_marginTop="15dp"
        android:background="@mipmap/donwload_icon"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_marginTop="70dp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="276dp"
            android:layout_height="53dp"
            android:layout_marginTop="12dp"
            android:background="@mipmap/download_address_bg"
            android:gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:text="http://39.107.93.58/api/download_app"
            android:textColor="#ff6075d7"
            android:textSize="12sp" />


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/mine_download"
            android:drawablePadding="8dp"
            android:text="保存到相册"
            android:textColor="#ff6075d7"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_copy_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/download_copy"
            android:drawablePadding="8dp"
            android:text="复制地址"
            android:textColor="#ff6075d7"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>